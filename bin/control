#!/bin/bash -e

PATH=/bin/:/usr/bin:$PATH

source $OPENSHIFT_CARTRIDGE_SDK_BASH

function start {
    $OPENSHIFT_PLAYFRAMEWORK_DIR/template/target/start -Dhttp.port=$OPENSHIFT_PLAYFRAMEWORK_PORT -Dhttp.address=$OPENSHIFT_PLAYFRAMEWORK_IP
}

function stop {
}

function restart {
}

function catchall {
    echo "not yet implemented"
}

# Handle commands.
case "$1" in
  start)       start ;;
  stop)        stop ;;
  restart)     restart ;;
  status)      status ;;
  reload)      catchall ;;
  tidy)        catchall ;;
  pre-build)   catchall ;;
  build)       catchall ;;
  deploy)      catchall ;;
  post-deploy) catchall ;;
  *)           exit 0
esac

exit 0